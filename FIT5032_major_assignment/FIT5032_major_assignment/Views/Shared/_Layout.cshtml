<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" type="image/svg" href="~/Content/image/logo_icon/32_32.png" />
    <title>AthleticScan - @ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    <link href="~/Content/custom_style/style.css" rel="stylesheet" />
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm">
        <div class="container">
            <a href="@Url.Action("Index", "Home")" title="IndexView" class="links" style="padding-right:10px;">
                <img src="~/Content/image/logo_icon/small.png" />
            </a>
            <button type="button" class="navbar-toggler" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" title="Toggle navigation" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <li>@Html.ActionLink("Home", "Index", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("Services", "Services", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("Booking", "Create", "Bookings", new { area = "" }, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("About", "About", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                </ul>
                 @Html.Partial("_LoginPartial")
            </div>
        </div>
    </nav>
    <div id="main">
        @RenderBody()
        <footer class="row">
            <section class="col-md-4 col-12 sitemap" aria-labelledby="gettingStartedTitle">
                <img src="~/Content/image/logo_icon/medium.png" />
                <div class="row">
                    <div class="col-1"></div>
                    <div class="col-2">
                        <img src="~/Content/image/icons/icons8-instagram-48.png"/>
                    </div>
                    <div class="col-2">
                        <img src="~/Content/image/icons/icons8-facebook-48.png" />
                    </div>
                </div>
                
            </section>
            <section class="col-md-4 col-12 sitemap" aria-labelledby="librariesTitle">
                Site Map
            </section>
            <section class="col-md-4 col-12 sitemap" aria-labelledby="hostingTitle">
                Contact
            </section>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
